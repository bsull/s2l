<%= form_for(@customer) do |f| %>

  <h5><%= legend %></h5>

  <% if @customer.errors.any? %>
    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>	



