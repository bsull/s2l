<table> 
	<caption>Confidences</caption>
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Weight (%)</th>
			<th> </th>
		</tr>
	</thead>
	<tbody> 
		<% @confidences.each do |confidence| %>
		  <tr>
			<td><%= link_to confidence.name, confidence %></td>
			<td><%= confidence.description %></td>
			<td style='text-align:center'><%= confidence.weight %></td>
			<% if can? :update, Confidence %> 
			<td><%= link_to "edit", edit_confidence_path(confidence) %></td>
			<% end %>
		  </tr>
		<% end %>
	</tbody>
</table>

<% if can? :create, Confidence %> 
  <p><%= link_to 'New Confidence', new_confidence_path %></p>
<% end %>
