<h2 class='form_heading'>Sign In</h2>
<% if @current_account %>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class='row'><%= f.label :email %><%= f.text_field :email, :class =>'initial-focus' %></div>
    <div class='row'><%= f.label :password %><%= f.password_field :password %></div>
    <% if devise_mapping.rememberable? -%>
      <div class='row'><%= f.check_box :remember_me %><%= f.label :remember_me, :class => "check" %></div>
	<% end -%>
	<%= f.hidden_field :account_id, :value => @current_account.id %>
    <div class='row'><%= f.submit "Sign in" %></div>
  <% end %>
  <!-- <%= render :partial => "devise/shared/links" %> -->
<% else %>
  <h3> I don't recognize that account. Check the URL </h3>
<% end %>