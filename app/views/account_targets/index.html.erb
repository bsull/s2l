<table> 
	<caption>Account Targets</caption>
	<thead>
		<tr>
			<th>Fiscal Year End</th>			
			<th>1st Quarter</th>
			<th>2nd Quarter</th>
			<th>3rd Quarter</th>
			<th>4th Quarter</th>
			<% if can? :update, AccountTarget %> 
			  <th> </th>
			<% end %>
		</tr>
	</thead>
	<tbody> 
		<% @account_targets.each do |account_target| %>
		  <% @fye = Date.new(account_target.fiscal_year, @current_account.fiscal_year_end).strftime("%B %Y") %>
		  <tr>
			<td><%= @fye %></td>
			<td><%= number_to_currency(account_target.q1, :precision => 0) %></td>
			<td><%= number_to_currency(account_target.q2, :precision => 0) %></td>
			<td><%= number_to_currency(account_target.q3, :precision => 0) %></td>
			<td><%= number_to_currency(account_target.q4, :precision => 0) %></td>
			<% if can? :update, AccountTarget %> 
			  <td><%= link_to "edit", edit_account_target_path(account_target) %></td>
			<% end %>
		  </tr>
		<% end %>
	</tbody>
</table>

<% if can? :create, AccountTarget %> 
  <p><%= link_to 'New Account Target', new_account_target_path %></p>
<% end %>